
@{
    ViewBag.Title = "PlayersDetails";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12" style="background-color: #f2f2f2l">
    <div class="row custom_box">
        <h5> <b style="color:red"> Player Pokemon Details </b> </h5>
    </div>
    <div class="row custom_box">
        <div class="col-lg-12">
            <form action="" id="form_submit">
                <div id="form"></div>
            </form>

        </div>
    </div>
</div>
<script>
    $(document).ready(function () {


        var url = new URL(window.location.href);

        var playerId = url.searchParams.get("playerId");
        var pokemonId = url.searchParams.get("pokemonId");

        var data = {
            "id": "",
            "playerId": "",
            "pokemonId": "",
            "natureId": "",
            "iv_hp": "",
            "iv_attack": "",
            "iv_def": "",
            "iv_spatk": "",
            "iv_spdef": "",
            "iv_speed": "",
            "shiny": false,
            "createDate": ""
        }

        var pkms = [];
        var natures = [];

        data.pokemonId = pokemonId;
        data.playerId = playerId;

        if (playerId != undefined && playerId != null && playerId != "")
            if (pokemonId != undefined && pokemonId != null && pokemonId != "") {

                $.ajax({
                    url: Config.nodeHOST + "api/v1/playerpokemon",
                    async: false,
                    method: "POST",
                    data: JSON.stringify(data),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (e) {
                        console.log(e);
                        data = e[0];
                    },
                    error: function () {
                        console.log("Loi");
                    }
                })
            }

        // get pkms
        $.ajax({
            url: Config.dotnetHOST + "api/v1/pokemon/all",
            method: "GET",
            async: false,
            success: function (e) {
                pkms = e;
            }
        });
        //get natures
        $.ajax({
            url: Config.nodeHOST + "api/v1/nature",
            method: "GET",
            async: false,
            success: function (e) {
                natures = e;
            }
        });

        function save() {
            if (playerId != undefined && playerId != null && playerId != "") {
                if (pokemonId != undefined && pokemonId != null && pokemonId != "") {

                    $.ajax({
                        url: Config.nodeHOST + "api/v1/updateplayerpokemon",
                        method: "POST",
                        data: JSON.stringify(data),
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        success: function () {
                            window.location.href = "/Admin/PlayersPokemons?id=" + playerId;
                        }
                    });
                } else {
                    $.ajax({
                        url: Config.nodeHOST + "api/v1/insertplayerpokemon",
                        method: "POST",
                        data: JSON.stringify(data),
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        success: function () {
                            window.location.href = "/Admin/PlayersPokemons?id=" + playerId;
                        }
                    });
                }
            }
        }


        $("#form").dxForm({
            formData: data,
            items: [{
                itemType: "group",
                colCount: 2,
                items: [{
                    dataField: "pokemonId",
                    label: {
                        text: "Pokemon"
                    },
                    validationRules: [{
                        type: "required",
                        message: "Bạn chưa nhập ten"
                    }],
                    editorType: "dxSelectBox",
                    editorOptions: {
                        dataSource: pkms,
                        valueExpr: "id",
                        displayExpr: "name"
                    }
                }, {
                    dataField: "natureId",
                    editorType: "dxSelectBox",
                    validationRules: [{
                        type: "required",
                        message: "Bạn chưa nhập ten"
                    }],
                    editorOptions: {
                        dataSource: natures,
                        valueExpr: "id",
                        displayExpr: "name"
                    }
                }, "iv_hp", "iv_attack", "iv_def", "iv_spatk", "iv_spdef", "iv_speed",
                {
                    dataField: "shiny",
                    editorType: "dxCheckBox"
                },
                {
                    itemType: "group",
                    colSpan: 2,
                    colCount: 10,
                    items: [{ itemType: "empty", colSpan: 4 }, {
                        itemType: "button",
                        colSpan: 1,
                        buttonOptions: {
                            text: "Save",
                            type: "success",
                            icon: "save",
                            useSubmitBehavior: true,
                            onClick: function () {

                            }
                        }
                    }, {
                        itemType: "button",
                        colSpan: 1,
                        buttonOptions: {
                            text: "Back",
                            type: "danger",
                            icon: "refresh",
                            onClick: function () {
                                window.location.href = "/Admin/PlayersPokemons?id=" + playerId;
                            }
                        }
                    }, { itemType: "empty", colSpan: 4 }]
                }]
            }]
        });

        $("#form_submit").on("submit", function (e) {
            e.preventDefault();
            save();
        });
    });
</script>

