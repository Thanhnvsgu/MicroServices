
@{
    ViewBag.Title = "Player";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="col-lg-12" style="background-color: #f2f2f2l">
    <div class="row custom_box">
        <h5> <b style="color:red"> PlayerInfo </b> </h5>
    </div>
    <div class="row custom_box">
        <div class="col-lg-12">
            <div id="form"></div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        var playerId = Custom.parseJwt(Cookies.get("Token_User")).id;

         var data = {
            id: "",
            username: "",
            password: "",
            sex: "",
            birthday: "",
            national:""
        }

        // player info
        $.ajax({
            url: Config.dotnetHOST + "api/v1/Player/" + playerId,
            method: "GET",
            async: false,
            success: function (e) {
                console.log(e);
                data = e;
            }
        });

        $("#form").dxForm({
            formData: data,
            colCount:2,
            items: [{
                dataField: "username",
                editorOptions: {
                    disabled: true
                }
            },{
                    dataField: "sex",
                    label: {
                        text: "Gioi tinh"
                    },
                    editorType: "dxSelectBox",
                editorOptions: {
                    disabled: true,
                    dataSource: [{ id: 0, name: "Nam" }, { id: 1, name: "Nu" }],
                    valueExpr: "id",
                    displayExpr: "name"
                }
            },{
                    dataField: "birthday",
                editorType:"dxDateBox",
                editorOptions: {
                    disabled: true
                }
            },{
                    dataField: "national",
                editorOptions: {
                    disabled: true
                }
            }]
        });

    });
</script>